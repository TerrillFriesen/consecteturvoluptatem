{
  "compilerOptions": {
    "strict": true,
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "jsx": "preserve",
    "types": ["node"],
    "baseUrl": "."
  },
  "exclude": ["**/node_modules/**", "**/dist/**"],
  "include": ["packages/**/*", "examples/**/*"]
}
